<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task Name"/>

    <EditText
        android:id="@+id/task_name_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Priority"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/priority_high_btn_id"
            style="@style/priorityButton"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/high_priority"
            android:text="High" />

        <Button
            android:id="@+id/priority_medium_btn_id"
            style="@style/priorityButton"
            android:background="@color/medium_priority"
            android:text="medium" />

        <Button
            android:id="@+id/priority_low_btn_id"
            style="@style/priorityButton"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/low_priority"
            android:text="Low" />

    </LinearLayout>

</LinearLayout>